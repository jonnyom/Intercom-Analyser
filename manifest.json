{
	"manifest_version" : 2,

	"name": "Intercom Analyser",
	"description": "This extension checks for the existence of Intercom on a webpage",
	"version": "0.4",

	"content_scripts": [
	  {
	    "matches": ["<all_urls>"],
	    "js": ["content.js"]
	  }  
	],
	"background": {
		"scripts": ["background.js"]
	},
	"web_accessible_resources" : ["inject.js"],
	"browser_action": {
  		"default_icon": "intercom.png"
	},
	"permissions": [
        "tabs", "<all_urls>"
    ]
}